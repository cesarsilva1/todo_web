<div align="center">
<h1> Welcome to ToDo!!! </h1>
<h2> Sign in and start doing what you have ToDo! </h2>
<%= form_tag user_sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <br/>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br/>
  </div>
  <div class="actions">
    <%= submit_tag "Sign in" %>
  </div>
<% end %>
<h4 align="center"> If you don't have an account, sign up <%= link_to 'here', new_user_path %>.</h4>
</div>